<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottle_station"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_weight="2"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/leaf"/>
        <TextView
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="10dp"
            android:paddingTop="20dp"
            android:textSize="24dp"
            android:text="Bottle Filling Station"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:padding="20dp"
            android:text="Bottle Filling Station filters out lead, particulate, chlorine, odor and other contaminants. The touchless system is activated by motion, the drainage system eliminates standing water, and itâ€™s made with microbial elements."/>
        <Button
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:text="\?"/>
    </LinearLayout>
</LinearLayout>